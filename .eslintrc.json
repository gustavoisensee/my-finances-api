{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "*.prisma",
    "prisma/**/*.prisma",
    "**/*.js",
    "**/*.map"
  ],
  "rules": {}
}

